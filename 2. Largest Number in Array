===============================================================By giving input in program=========================================================
public class Main
{
	public static void main(String[] args) {
	    int[] arr = {1,5,3,2,9,7,8,4};
	    int max=arr[0];
	    for(int i=1;i<arr.length;i++){
	        if(max<arr[i]){
	            max=arr[i];
	        }
	    }
		System.out.println("Hello World :"+max);
	}
}
===============================================================By giving input=================================================================
import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    int[] arr = new int[10];
	    Scanner sc = new Scanner(System.in);
	    for(int i=0;i<arr.length;i++){
	        arr[i]=sc.nextInt();
	    }
	    int max=arr[0];
	    for(int i=1;i<arr.length;i++){
	        if(max<arr[i]){
	            max=arr[i];
	        }
	    }
		System.out.println("Hello World :"+max);
	}
}
===============================================================By giving input & Its Frequency=================================================================
import java.util.Scanner;
public class Main
{
	public static void main(String[] args) {
	    int[] arr = new int[10];
	    Scanner sc = new Scanner(System.in);
	    for(int i=0;i<arr.length;i++){
	        arr[i]=sc.nextInt();
	    }
	    int max=arr[0];
	    int count=0;
	    for(int i=1;i<arr.length;i++){
	        if(max<arr[i]){
	            max=arr[i];
	            count=1;
	        }else if(max==arr[i]){
	            count++;
	        }
	    }
		System.out.println("Largest number :"+max);
	    System.out.println("Count of largest number :"+count);
	}
}
1,5,9,24,6,24,9,45,45,45
Largest number :45
Count of largest number :3
